// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @unique @default(autoincrement())
  email    String   @unique
  password String
  name     String?
  boards   Boards[] @relation("BoardMembers")
  Boards   Boards[] @relation("CreatedBy")
}

model Boards {
  id        Int      @id @unique @default(autoincrement())
  title     String
  members   User[]   @relation("BoardMembers")
  createdBy User     @relation("CreatedBy", fields: [userId], references: [id])
  columns   Column[]
  Ticket    Ticket[]
  userId    Int
}

model Column {
  id      String   @id @unique @default(uuid())
  name    String
  board   Boards   @relation(fields: [boardId], references: [id])
  boardId Int
  Ticket  Ticket[]
}

model Ticket {
  id          String @id @unique @default(uuid())
  title       String
  description String
  position    Int?   @default(autoincrement()) // Automatically set to the end
  board       Boards @relation(fields: [boardID], references: [id])
  boardID     Int
  column      Column @relation(fields: [columnID], references: [id])
  columnID    String
}
